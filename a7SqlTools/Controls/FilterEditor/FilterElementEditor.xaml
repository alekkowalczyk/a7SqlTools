<UserControl x:Class="a7SqlTools.Controls.FilterEditor.FilterElementEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:a7SqlTools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="500">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="firstColumn" Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <controls:PropertySelector x:Name="propSelector"  Grid.Column="0"></controls:PropertySelector>
        <StackPanel Grid.Column="1" Margin="0,4,0,0">
            <Label x:Name="lCaption" Margin="0" Padding="0">ds</Label>
            <ContentControl x:Name="filterContainer">ds</ContentControl>
        </StackPanel>
    </Grid>
    <!--<StackPanel x:Name="spMain"  Margin="5">
        <Label x:Name="lCaption" Margin="0" Padding="0">ds</Label>
    </StackPanel>-->
</UserControl>

